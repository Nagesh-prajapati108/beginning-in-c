#include <stdio.h>

int main() {
    int i,j, m, n;
    printf("ENTER THE ROWS:");
    scanf("%d",&m);
    printf("ENTER THE COLOUMNS:");
    scanf("%d",&n);
    
    int a[m][n];
    int b[m][n];
    int c[m][n];
    printf("\nENTER THE ELEMENT OF FIRST MATRIX:\n");
    
    for(i=0;i<m;i++){
        for(j=0;j<n;j++)
        scanf("%d",&a[i][j]);
    }
    printf("ENTER THE ELEMENT OF SECOND MATRIX:\n");
    for(i=0;i<m;i++){
        for(j=0;j<n;j++)
        scanf("%d",&b[i][j]);
    }
    for(i=0;i<m;i++){
        for(j=0;j<n;j++)
        c[i][j]=a[i][j]+b[i][j];
    }
    
    printf("ADDITION OF BOTH MATICES ARE:\n");
    for(i=0;i<m;i++){
        printf("\n");
        for(j=0;j<n;j++)
        printf("\t%d",c[i][j]);
    }
    
    

    return 0;
}
