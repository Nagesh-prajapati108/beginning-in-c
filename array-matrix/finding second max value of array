#include<stdio.h>
int main()
{
    int n,i;
    printf("ENTER THE SIZE OF ARRAY:");
    scanf("%d",&n);
    
    int a[n];
    for(i=0; i<n; i++){
        scanf("%d",&a[i]);
    }
    
    int max=a[0], pos=0;
    int smax=a[0], pos1=0;
    
    for(i=0; i<n; i++){
        if(a[i] > max){
            max=a[i];
            pos=i;
        }
    }
    
    for(i=0; i<n; i++){
        if(smax!=max && max>a[i] &&smax<a[i]){
            smax=a[i];
            pos1=i;
        }
    }
    
    printf("position:%d\t maximum value:%d\n",pos,max);
    printf("position:%d\t second maximum value:%d",pos1,smax);
    
    return 0;
}
