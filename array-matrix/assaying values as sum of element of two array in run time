#include<stdio.h>
int main()
{
    int i,n;
    printf("ENTER THE ELEMENT:");
    scanf("%d",&n);

    int a[n],b[n],c[n];

    printf("ENTER THE VALUE OF FIRST ARRAY:\n");
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    
    printf("ENTER THE VALUE OF SECOND ARRAY:\n");
    for(i=0;i<n;i++){
        scanf("%d",&b[i]);
    }
  
    for(i=0;i<n;i++){
        c[i]=b[i]+a[i];
    }

    printf("third array:\t");
    for(i=0;i<n;i++){
        printf("%d",c[i]);
    }
    
    return 0;
}
