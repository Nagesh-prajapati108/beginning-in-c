#include<stdio.h>
int main()
{
    int n,i;
    printf("ENTER THE SIZE OF ARRAY:");
    scanf("%d",&n);
    
    int a[n];
    for(i=0; i<n; i++){
        scanf("%d",&a[i]);
    }
    
    int min=a[0], max=a[0];
    int pos=0, pos1=0;
    
    for(i=0; i<n; i++){
        if(a[i]<min){
            min=a[i];
            pos=i;
        }
        
        if(a[i] > max){
            max=a[i];
            pos1=i;
        }
    }
    printf("position:%d\t smallest value:%d\n",pos,min);
    printf("position:%d\t maximum value:%d",pos1,max);
    
    return 0;
}
