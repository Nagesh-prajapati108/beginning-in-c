#include<stdio.h>
int main()
{
    int i,n;
    printf("ENTER THE ELEMENT:");
    scanf("%d",&n);
    
    printf("ENTER THE VALUE OF FIRST ARRAY:\n");
    
    int a[n];
    int b[n];
    int c[n];
    
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    
    printf("ENTER THE VALUE OF SECOND ARRAY:\n");
    for(i=0;i<n;i++){
        scanf("%d",&b[i]);
    }
    
    printf("third array:\t");
  
    for(i=0;i<n;i++){
        c[i]=b[i]+a[i];
        printf("%d\t",c[i]);
    }
    
    return 0;
}
