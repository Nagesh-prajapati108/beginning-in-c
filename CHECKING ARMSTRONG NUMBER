#include<stdio.h>
#include<math.h>
int main()
{
    int n,num,sum=0,r,c=0,num_1;
    printf("ENTER THE NUMBER TO CHECK ARMSTRONG:");
    scanf("%d",&n);
    
    num=n;
    while(n>0)
    {
        n=n/10;
        c=c+1;
    }
    num_1=num;
    while(num>0)
    {
        r=num%10;
        sum=sum+pow(r,c);
        num=num/10;
    }
    if(num_1==sum)
        printf("ARMSTRONG");
    else
        printf("NOT A ARMSTRONG");
    return 0;
}
