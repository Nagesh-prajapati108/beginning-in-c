#include<stdio.h>
int main()
{
    int n, even_sum=0,odd_sum=0;
    printf("enter the terms for sum:");
    scanf("%d",&n);
    
    for(int i=1; i<=n; i++)
    {
        if(i%2==0)
        even_sum=even_sum+i;
        
        else
        odd_sum=odd_sum+i;
        
    }
    printf("sum of even: %d",even_sum);
    printf("sum of odd: %d",odd_sum);
    
    return 0;
    
}
