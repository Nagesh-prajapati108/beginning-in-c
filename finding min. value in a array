#include<stdio.h>
int main()
{
    int n,i;
    printf("ENTER THE SIZE OF ARRAY:");
    scanf("%d",&n);
    
    int a[n];
    for(i=0; i<n; i++){
        scanf("%d",&a[i]);
    }
    
    int min=a[0];
    int pos=0;
    for(i=0; i<n; i++){
        if(a[i]<min){
            min=a[i];
            pos=i;
        }
    }
    printf("position:%d\t",pos);
    printf("smallest element:%d",min);
    return 0;
}
